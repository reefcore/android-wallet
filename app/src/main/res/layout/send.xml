<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF9FF"
    android:orientation="vertical">
<!-- content section -->
    <!-- slider-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
<!-- slider -->
        <com.gigamole.infinitecycleviewpager.VerticalInfiniteCycleViewPager
            android:id="@+id/hicvp"
            android:layout_width="match_parent"
            android:layout_height="200dp"></com.gigamole.infinitecycleviewpager.VerticalInfiniteCycleViewPager>
    </RelativeLayout>
<!-- detail text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:text="If You Want To Send Some Money,Please Fill Up The Below Form."
        android:textColor="#6A6868" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
<!-- Bitcoin address field -->
                    <EditText
                        android:layout_width="0dp"
                        android:id="@+id/etAddress"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#00000000"
                        android:hint="Bitcoin Address"
                        android:paddingLeft="10dp"
                        android:textColorHint="#B2E5FC" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="#DFF5FF"
                        android:padding="10dp"
                        android:id="@+id/btn_scan"
                        android:scaleType="fitCenter"
                        android:src="@drawable/qr_icon" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
<!--bitcoin amount field  -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#00000000"
                        android:hint="Amounts Of Bitcoin"
                        android:paddingLeft="10dp"
                        android:textColorHint="#B2E5FC" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:padding="10dp"
                        android:scaleType="fitCenter"

                        android:src="@drawable/amouont" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
<!-- notes field -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#00000000"
                        android:hint="Notes"
                        android:paddingLeft="10dp"
                        android:textColorHint="#B2E5FC" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/notes" />
                </LinearLayout>

            </LinearLayout>
<!-- send now -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/gredient_effect_for_button"
                android:text="Send Now"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

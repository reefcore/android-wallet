<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolss"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- confirm send page start here -->
    <!-- top section -->
    <LinearLayout
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/toolbar_bg"

        android:orientation="vertical"
        android:popupTheme="@style/AppTheme.PopupOverlay"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!-- back button -->
            <ImageButton
                android:id="@+id/ham"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"

                android:background="#00000000"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backarrow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_weight="1.0"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Confirm Send"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
                <!-- Balance -->
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.0"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="0.0000520 BTC"
                    android:textColor="#ffffff"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.0"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="$88 USD"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- content section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/setting_item_style"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center|start"
                android:padding="10dp"
                android:text="Confirm Send Details"
                android:textColor="#575857"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#CAD6DA"></View>

        <!-- to -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDF5FF"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="To"
                    android:textColor="#575857"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="skalmurad@gmail.com" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- from -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CDF1FF"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="From"
                    android:textColor="#575857"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"

                    android:padding="10dp"
                    android:text="BTC Wallet" />
            </LinearLayout>
            <!-- total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDF5FF"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Total"
                    android:textColor="#575857"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"

                    android:padding="10dp"
                    android:text="$88.00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#CDF1FF"
                android:orientation="horizontal">

                <!-- notes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:gravity="center|start"
                    android:paddingLeft="5dp"
                    android:text="Note"
                    android:textColor="#575857"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:gravity="center"

                    android:padding="10dp"
                    android:text="Test Purpose" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <!-- go back button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/confirm_send_button_style"
                android:fontFamily="sans-serif-condensed"
                android:text="Go Back"
                android:textAllCaps="false" />
            <!-- confirm button-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.0"
                android:background="@drawable/gredient_effect_for_button_receive"
                android:fontFamily="sans-serif-condensed"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>